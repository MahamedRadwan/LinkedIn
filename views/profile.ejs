<%-include('shared/header.ejs')%>


    <div class="cover">

    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-4 ">
                <div class="person card pb-5 px-5  text-center">
                    <img src="/img/man.jpg" width="250" alt="">
                </div>
            </div>



            <div class="col-md-8 pt-4">
                <h2> <%= fname%> <%= lname%></h2>
                <h4 class="text-muted">Full Stack Web</h4>
            </div>
            <% for( let i=0; i < posts.length; i++ ) { %>
                <div class="col-md-8 pt-4 ml-auto">
                    <div class="post card p-4 auto">
                        <div class="media">
                            <img src="/img/man.jpg" width="60" class="mr-3" alt="...">
                            <div class="media-body">
                                <h5 class="mt-0">
                                    <%= posts[i].userID.fName%>
                                        <%= posts[i].userID.lName%>
                                </h5>
                                <h4 class="mt-0">
                                    <%= posts[i].userID.userName%>
                                </h4>
                            </div>
                        </div>
                        <hr>
                        <h3>
                            <%= posts[i].title %>
                        </h3>
                        <p class="pt-4">
                            <%= posts[i].body %>
                        </p>
                    </div>
                </div>
            <% } %>

        </div>


    </div>
   
    






    <%-include('shared/footer.ejs')%>